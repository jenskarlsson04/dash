<VehicleDashboard>:
    orientation: 'vertical'
    padding: 20
    spacing: 20
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Background color black
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 150
        Label:
            text: "VELOCITY"
            font_size: 16
            color: 0, 1, 1, 1  # Cyan
        Label:
            text: "000 kph"
            font_size: 32
            color: 1, 1, 1, 1  # White

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 150
        Label:
            text: "STATE OF CHARGE"
            font_size: 16
            color: 0, 1, 1, 1  # Cyan
        Label:
            text: "75%"
            font_size: 32
            color: 0, 1, 0, 1  # Green

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 150
        Label:
            text: "BATTERY POWER"
            font_size: 16
            color: 0, 1, 1, 1  # Cyan
        Label:
            text: "0.00 kW"
            font_size: 32
            color: 1, 1, 1, 1  # White

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Lap"
                font_size: 16
                color: 0, 1, 1, 1  # Cyan
            Label:
                text: "1"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "2"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "3"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "4"
                font_size: 20
                color: 1, 0, 1, 1  # Purple
            Label:
                text: "5"
                font_size: 20
                color: 0, 1, 0, 1  # Green

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Time"
                font_size: 16
                color: 0, 1, 1, 1  # Cyan
            Label:
                text: "01:28:04"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "00:44:67"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "01:33:70"
                font_size: 20
                color: 1, 1, 1, 1
            Label:
                text: "00:11:23"
                font_size: 20
                color: 1, 0, 1, 1  # Purple
            Label:
                text: "00:42:00"
                font_size: 20
                color: 0, 1, 0, 1  # Green

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1  # Green background for VCU
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "VCU: Connected"
            font_size: 18
            color: 1, 1, 1, 1  # White

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "BATTERY"
            font_size: 16
            color: 0, 1, 1, 1  # Cyan
        Label:
            text: "00 C"
            font_size: 18
            color: 1, 1, 1, 1  # White
        Label:
            text: "COOL LOOP"
            font_size: 16
            color: 0, 1, 1, 1  # Cyan
        Label:
            text: "22 C"
            font_size: 18
            color: 1, 1, 1, 1  # White
